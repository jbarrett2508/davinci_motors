<h2>New Car</h2>

<%= form_for(@car) do |form| %>
  <p>
    <%= form.label :make %>
    <%= form.text_field :make %>

  <p>
    <%= form.label :model %>
    <%= form.text_field :model %>

  <p>
    <%= form.label :year %>
    <%= form.text_field :year %>

  <p>
    <%= form.label :price %>
    <%= form.text_field :price %>
  </p>
    <%= form.submit %>

<% end %>
